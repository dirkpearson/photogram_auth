<div class="page-header">
  <h3>Photo #<%= @photo.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_like" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
      </div>

      <!-- Label and input for movie_id -->
      <div class="form-group">
        <input type="hidden" id="photo_id" name="photo_id" placeholder="Photo" class="form-control" value="<%= @photo.id %>">
      </div>

      <button class="btn btn-success">
        Like Photo
      </button>
    </form>


<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Caption</dt>
      <dd><%= @photo.caption %></dd>

      <dt>Image</dt>
          <dd><img src="<%= @photo.image %>" width="100"></dd>

      <dt>User</dt>
      <dd><%= @photo.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/photos" class="btn btn-primary">
        Back
      </a>
      <a href="/photos/<%= @photo.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_photo/<%= @photo.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>

<div class="header">
  <h2>Comments</h2>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <tr>
          <th>Comment</th>
          <th>User</th>

        </tr>

        <% @photo.comments.each do |comment| %>
        <tr>
          <td><%= comment.caption %></td>
          <td><%= comment.user_id %></td>
          <td>
            <a href="/comments/<%= comment.id %>" class="btn btn-primary">Show</a>
            <a href="/comments/<%= comment.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_comment/<%= photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
</div>
